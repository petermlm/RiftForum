FROM golang:1.12


WORKDIR /go/src/app
COPY . .

RUN go get -d -v ./...
RUN go install -v ./...

RUN mkdir -p /air_run
RUN apt install curl
RUN curl -fLo /air_run/air https://raw.githubusercontent.com/cosmtrek/air/master/bin/linux/air
RUN chmod +x /air_run/air

CMD ["/air_run/air", "-c", "air.conf"]
